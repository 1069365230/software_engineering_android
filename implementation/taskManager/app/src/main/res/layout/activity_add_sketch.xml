<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".view.AddSketchActivity"
    tools:ignore="MissingDefaultResource">

    <com.example.taskmanager.view.MyCanvas
        android:id="@+id/canvas"
        android:layout_width="400dp"
        android:layout_height="640dp"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_close_sketch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="667dp"
        app:layout_constraintRight_toLeftOf="@+id/button_save_sketch"
        app:layout_constraintTop_toBottomOf="@+id/canvas"/>

    <Button
        android:id="@+id/button_save_sketch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="669dp"
        app:layout_constraintLeft_toRightOf="@+id/button_close_sketch"
        app:layout_constraintTop_toBottomOf="@+id/canvas" />
</androidx.constraintlayout.widget.ConstraintLayout>